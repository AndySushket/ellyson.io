{
  "compilerOptions": {
    "target": "ES6",
    "baseUrl": "./src",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "react",
      "react-dom"
    ]
  },
  "include": [
    "./src",
    "typings.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.vert",
    "src/**/*.frag"
  ]
}
